{
  "manifest_version": 3,
  "name": "Sensum (Dev)",
  "version": "0.0.1",
  "description": "Track doomscroll time and nudge toward tiny quests.",

  "action": {
    "default_title": "Sensum",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["tabs", "storage"],

  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.tiktok.com/*",
    "*://*.instagram.com/*",
    "*://*.reddit.com/*",
    "http://localhost:3000/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}